{
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "ArchLinux_64",
            "iso_url": "http://mirror.nexcess.net/archlinux/iso/2017.05.01/archlinux-2017.05.01-x86_64.iso",
            "iso_checksum": "6492568efbd7f5c876eeb3a3133bb819",
            "iso_checksum_type": "md5",
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "ssh_timeout": "1000000s",
            "boot_command":["<enter><wait10><wait10><wait10>",
                            "/usr/bin/curl http://{{ .HTTPIP }}:{{ .HTTPPort }}/install.sh",
                            "| bash<enter>"],
            "http_directory": ".",
            "shutdown_command": "shutdown now",
            "guest_additions_mode": "disable"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "provision.sh"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "archlinux.box"
        }
    ]
}
